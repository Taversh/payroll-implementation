            <h1 style="text-align: center; border:2px solid white; margin-top: 15px;">Assign Salary</h1>
            <br>
            <form class="employee-add-details-container" method="post">
                <div>
                    <input type="text" name="identity" id="identity" placeholder="Employee ID" required maxlength="5">
                </div>
                <div>
                    <input type="number" name="salaryID" id="salaryID" placeholder="Salary ID" required maxlength="5">
                </div>
                <div>
                    <input type="number" name="msalary" id="msalary" placeholder="Monthly Salary" required>
                </div>
                <div>
                    <input type="number" name="ybonus" id="ybonus" placeholder="Yearly Bonus" required>
                </div>
                <div>
                    <input type="text" name="taxstatus" id="taxstatus" placeholder="Tax Info" required>
                </div>
                <button type="submit" class="sub-btn">Submit</button>
            </form>
